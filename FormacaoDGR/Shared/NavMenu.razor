<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">FormacaoDGR</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <AuthorizeView>
            <Authorized>
                @if (@context.User.IsInRole("Admins"))
                {
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="uhsmanager">
                            <span class="oi oi-aperture" aria-hidden="true"></span> Unidades de Handling
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="usersmanager">
                            <span class="oi oi-people" aria-hidden="true"></span> Utilizadores
                        </NavLink>
                    </li>
                    @*<li class="nav-item px-3">
                <NavLink class="nav-link" href="fileupload">
                    <span class="oi oi-plus" aria-hidden="true"></span> File Upload
                </NavLink>
            </li>*@
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="gruposmanager">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Grupos
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="empresasmanager">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Empresas
                        </NavLink>
                    </li>
                }
            </Authorized>
            <NotAuthorized>
                <li class="nav-item px-3">
                    <span>Não está logado.</span>
                </li>
            </NotAuthorized>
        </AuthorizeView>
    </ul>
</div>
@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
