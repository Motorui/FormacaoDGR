@using FormacaoDGR.Data.Models
@using FormacaoDGR.Data.Services

@inject Sotsera.Blazor.Toaster.IToaster Toaster
@inject IGrupoService _grupoService
@inject IJSRuntime _jsRuntime

<div class="modal" tabindex="-1" role="dialog" id="grupoModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@CustomHeader</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <EditForm Model="@ModelGrupo" OnValidSubmit="@HandleValidSubmit">
                    <DataAnnotationsValidator />
                    <div class="form-group">
                        <label for="taskName">Nome</label>
                        <input type="hidden" @bind-value="@ModelGrupo.ID" />
                        <InputText id="name" class="form-control" @bind-Value="@ModelGrupo.Nome" />
                        <ValidationMessage For="@(() => ModelGrupo.Nome)" />
                    </div>
                    <span data-toggle="tooltip" data-placement="top" title="Gravar">
                        <button type="submit" class="btn btn-success btn-sm">
                            <span class="oi oi-hard-drive"></span> Submeter
                        </button>
                    </span>
                    <span data-toggle="tooltip" data-placement="top" title="Fechar">
                        <button type="button" class="btn btn-warning btn-sm" data-dismiss="modal">
                            <span class="oi oi-hard-drive"></span> Cancelar
                        </button>
                    </span>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Grupo ModelGrupo { get; set; }

    [Parameter]
    public Action DataChanged { get; set; }

    [Parameter]
    public RenderFragment CustomHeader { get; set; }

    private async void HandleValidSubmit()
    {
        if (ModelGrupo.ID == Guid.Empty)
        {
            await _grupoService.AddGrupoAsync(ModelGrupo);

            await Task.Delay(100);
            Toaster.Success("Grupo adicionado com sucesso", "Sucesso!");
        }
        else
        {
            await _grupoService.UpdateGrupoAsync(ModelGrupo);

            await Task.Delay(100);
            Toaster.Success("Grupo editado com sucesso", "Sucesso!");
        }

        await CloseGrupoModal("grupoModal");
        DataChanged?.Invoke();
    }

    private async Task CloseGrupoModal(string modalId)
    {
        await _jsRuntime.InvokeAsync<object>("global.closeModal", modalId);
    }
}